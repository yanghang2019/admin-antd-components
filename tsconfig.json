{
	"compileOnSave": false, /*在最顶层设置compileOnSave标记，可以让IDE在保存文件的时候根据tsconfig.json重新生成文件*/
	"compilerOptions": {
		"types": [
			"node"
		],
		"moduleResolution": "node",
		"jsx": "react",
		"target": "es6",
		"module": "commonjs",
		"noImplicitAny": false,
		"removeComments": true,
		"baseUrl": "./src",
		"outDir": "./lib",
		"strictNullChecks": false,
		"noUnusedLocals": true,
		"typeRoots": [
			// 表示在哪个目录下找声明文件
			"node_modules/@types",
			"./typings/modules"
		],
		"declaration": true,
	},
	"include": [
		"./src/views/*.tsx",
		"./src/index.tsx",
		"./login/*.tsx"
	],
	"exclude": [
		"node_modules",
		"lib"
	]
}